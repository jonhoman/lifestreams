<!DOCTYPE html>
<html>
<head>
  <title>Lifestreams</title>
  <%= stylesheet_link_tag "application" %>
  <%= stylesheet_link_tag "scaffold" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="container">
    <%= link_to image_tag("/images/logo-beta.png", :id => "logo", :alt => "Lifestreams"), "/" %>

    <%= render 'layouts/user_nav' %>

    <%= image_tag "/images/Blue-Stream.gif", :id => "blue-stream", :alt => "Blue Stream" %>
      
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

<%= yield %>
  </div>

</body>
</html>
