<%= simple_form_for(@stream) do |f| %>
  <%= render :partial => 'shared/error_messages', :locals => { :resource => @stream } %>

  <%= f.input :name, :label => "Stream Name" , :input_html => { :autofocus => true } %>

  <%= f.association :feed, :label => "Choose a Feed", 
    :collection => Feed.user(current_user), :include_blank => true %>

  <%= f.input :included_categories, :label => "Only include these categories:" %>

  <%= f.association :twitter_accounts, :label => "Choose a Twitter Account",
    :collection => TwitterAccount.user(current_user), :include_blank => true, 
    :as => :check_boxes %>

  <%= f.association :facebook_accounts, :label => "Choose a Facebook Account",
    :collection => FacebookAccount.user(current_user), :include_blank => true, 
    :as => :check_boxes %>

  <%= f.association :email_lists, :label => "Choose an Email List",
    :collection => EmailList.user(current_user), :include_blank => true,
    :as => :check_boxes %>

  <%= f.button :submit, :class => "button" %>
<% end %>

